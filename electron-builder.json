{
  "appId": "com.archy.app",
  "productName": "Archy",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "src/splash.html",
    "package.json",
    "node_modules/**/*",
    "!**/*.map",
    "!**/*.ts",
    "!**/*.md",
    "!**/LICENSE*",
    "!**/README*",
    "!**/CHANGELOG*",
    "!**/.github",
    "!**/test",
    "!**/tests",
    "!**/__tests__",
    "!**/docs",
    "!**/examples",
    "!**/*.d.ts"
  ],
  "extraResources": [
    {
      "from": "build/icon.ico",
      "to": "icon.ico"
    },
    {
      "from": "build/icon.png",
      "to": "icon.png"
    }
  ],
  "asarUnpack": [
    "node_modules/cpu-features/**/*"
  ],
  "npmRebuild": false,
  "compression": "maximum",
  "electronLanguages": ["en-US"],
  "asar": true,
  "win": {
    "target": [{
      "target": "portable",
      "arch": ["x64"]
    }],
    "icon": "build/icon.ico",
    "forceCodeSigning": false,
    "signAndEditExecutable": false
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}",
    "splashImage": "build/splash.bmp"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Network",
    "icon": "build/icon.png"
  },
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.developer-tools",
    "icon": "build/icon.png"
  }
}
