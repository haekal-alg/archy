{
  "appId": "com.archy.app",
  "productName": "Archy",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "node_modules/**/*",
    "!**/*.map",
    "!**/*.ts",
    "!**/*.md",
    "!**/LICENSE*",
    "!**/README*",
    "!**/CHANGELOG*",
    "!**/.github",
    "!**/test",
    "!**/tests",
    "!**/__tests__",
    "!**/docs",
    "!**/examples",
    "!**/*.d.ts"
  ],
  "asarUnpack": [
    "node_modules/cpu-features/**/*"
  ],
  "npmRebuild": false,
  "compression": "maximum",
  "electronLanguages": ["en-US"],
  "asar": true,
  "win": {
    "target": [{
      "target": "portable",
      "arch": ["x64"]
    }],
    "icon": "build/icon.ico",
    "signAndEditExecutable": false
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Network"
  },
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.developer-tools"
  }
}
